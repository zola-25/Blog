@model SearchRequest

<div class="post-search-box">
    <form asp-controller="Search" asp-action="SearchRedirect">
        <div class="form-group">
            <input asp-for="Text" class="form-control" placeholder="Search articles" />
        </div>
        <input type="submit" class="btn btn-outline-secondary btn-block" value="Search" />
    </form>
</div>